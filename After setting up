#include <stdio.h>

int main()

{

    int x[100],y[100],u[100],v[100];

    int i,n,k;

    scanf("%d %d",&n,&k);

    for(i=0;i<k;i++)

    scanf("%d",&x[i]);

    for(i=0;i<k;i++)

    scanf("%d",&y[i]);

    u[0]=x[0];v[0]=y[0];

    if(u[0]==2&&v[0]==1)

    printf("3");

    else if(u[0]==2)

    printf("1");

    else if(u[0]==0)

    printf("4");

    else

    printf("6");

               return 0;

}
